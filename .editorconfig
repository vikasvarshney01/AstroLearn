# http://editorconfig.org
# IDE configurations for improving consistency across development environments

# top-most EditorConfig file in the repository
root = true

# all files
[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# markdown files
[*.md]
trim_trailing_whitespace = false
